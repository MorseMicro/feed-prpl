include $(TOPDIR)/rules.mk

PKG_NAME:=pwhm
PKG_VERSION:=v1.5.9
SHORT_DESCRIPTION:=PrplMesh WHM

PKG_SOURCE:=pwhm-v1.5.9.tar.gz
PKG_SOURCE_URL:=https://gitlab.com/prpl-foundation/prplmesh/pwhm/plugins/pwhm/-/archive/v1.5.9
PKG_HASH:=291093ab9b90f643ecc8120ad4ace5cf1bf44dbd8fbb9daa5d8c0f2856097b20
PKG_BUILD_DIR:=$(BUILD_DIR)/pwhm-v1.5.9
PKG_MAINTAINER:=Soft At Home <support.opensource@softathome.com>
PKG_LICENSE:=BSD-2-Clause-Patent
PKG_LICENSE_FILES:=LICENSE

COMPONENT:=pwhm

PKG_RELEASE:=1
PKG_BUILD_DEPENDS += openssl/host

define SAHInit/Install
	install -d ${PKG_INSTALL_DIR}/etc/rc.d/
	ln -sfr ${PKG_INSTALL_DIR}/etc/init.d/$(CONFIG_SAH_WLD_INIT_SCRIPT) ${PKG_INSTALL_DIR}/etc/rc.d/S$(CONFIG_SAH_WLD_INIT_ORDER)$(CONFIG_SAH_WLD_INIT_SCRIPT)
endef

include $(INCLUDE_DIR)/package.mk

define Package/$(PKG_NAME)
  SECTION:=net
  CATEGORY:=Network
  SUBMENU:=PrplMesh
  TITLE:=$(SHORT_DESCRIPTION)
  URL:=https://gitlab.com/prpl-foundation/prplmesh/pwhm/plugins/pwhm
  DEPENDS += +libsahtrace
  DEPENDS += +libswlc
  DEPENDS += +libswla
  DEPENDS += +libopenssl
  DEPENDS += +libnl-core
  DEPENDS += +libnl-genl
  DEPENDS += +libamxm
  DEPENDS += +libamxc
  DEPENDS += +libamxp
  DEPENDS += +libamxd
  DEPENDS += +libamxb
  DEPENDS += +libamxo
  DEPENDS += +amxrt
  MENU:=1
endef

define Package/$(PKG_NAME)/description
	PrplMesh WHM
endef

define Build/Compile
	$(call Build/Compile/Default, STAGINGDIR=$(STAGING_DIR) CONFIGDIR=$(STAGING_DIR) PKG_CONFIG_PATH=$(STAGING_DIR)/usr/lib/pkgconfig RAW_VERSION=$(PKG_VERSION) HARDCO_HAL_DIR=$(STAGING_DIR)/usr/include CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID=$(CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID) CONFIG_USE_SAH_WPS_DEVICE_NAME=$(CONFIG_USE_SAH_WPS_DEVICE_NAME) CONFIG_SAH_WPS_DEVICE_NAME=$(CONFIG_SAH_WPS_DEVICE_NAME) CONFIG_USE_SAH_WPS_FRIENDLY_NAME=$(CONFIG_USE_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_FRIENDLY_NAME=$(CONFIG_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_IE_SERIAL_CHOICE=$(CONFIG_SAH_WPS_IE_SERIAL_CHOICE) CONFIG_SAH_WLD_INIT_LEGACY=$(CONFIG_SAH_WLD_INIT_LEGACY) CONFIG_SAH_WLD_INIT_SCRIPT=$(CONFIG_SAH_WLD_INIT_SCRIPT) CONFIG_SAH_WLD_INIT_ORDER=$(CONFIG_SAH_WLD_INIT_ORDER))
endef

define Build/Install
	$(call Build/Install/Default, install INSTALL=install D=$(PKG_INSTALL_DIR) DEST=$(PKG_INSTALL_DIR) CONFIGDIR=$(STAGING_DIR) PV=$(PKG_VERSION) PKG_CONFIG_LIBDIR=$(STAGING_DIR)/usr/lib/pkgconfig LIBDIR=/usr/lib INSTALL_LIB_DIR=/lib INSTALL_BIN_DIR=/bin RAW_VERSION=$(PKG_VERSION) HARDCO_HAL_DIR=$(STAGING_DIR)/usr/include CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID=$(CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID) CONFIG_USE_SAH_WPS_DEVICE_NAME=$(CONFIG_USE_SAH_WPS_DEVICE_NAME) CONFIG_SAH_WPS_DEVICE_NAME=$(CONFIG_SAH_WPS_DEVICE_NAME) CONFIG_USE_SAH_WPS_FRIENDLY_NAME=$(CONFIG_USE_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_FRIENDLY_NAME=$(CONFIG_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_IE_SERIAL_CHOICE=$(CONFIG_SAH_WPS_IE_SERIAL_CHOICE) CONFIG_SAH_WLD_INIT_LEGACY=$(CONFIG_SAH_WLD_INIT_LEGACY) CONFIG_SAH_WLD_INIT_SCRIPT=$(CONFIG_SAH_WLD_INIT_SCRIPT) CONFIG_SAH_WLD_INIT_ORDER=$(CONFIG_SAH_WLD_INIT_ORDER))
	find $(PKG_INSTALL_DIR) -name *.a -exec rm {} +;
	find $(PKG_INSTALL_DIR) -name *.h -exec rm {} +;
	find $(PKG_INSTALL_DIR) -name *.pc -exec rm {} +;

	$(call SAHInit/Install)
endef

define Build/InstallDev
	$(call Build/Install/Default, install INSTALL=install D=$(STAGING_DIR) DEST=$(STAGING_DIR) CONFIGDIR=$(STAGING_DIR) PV=$(PKG_VERSION) PKG_CONFIG_LIBDIR=$(STAGING_DIR)/usr/lib/pkgconfig LIBDIR=/usr/lib INSTALL_LIB_DIR=/lib INSTALL_BIN_DIR=/bin RAW_VERSION=$(PKG_VERSION) HARDCO_HAL_DIR=$(STAGING_DIR)/usr/include CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID=$(CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID) CONFIG_USE_SAH_WPS_DEVICE_NAME=$(CONFIG_USE_SAH_WPS_DEVICE_NAME) CONFIG_SAH_WPS_DEVICE_NAME=$(CONFIG_SAH_WPS_DEVICE_NAME) CONFIG_USE_SAH_WPS_FRIENDLY_NAME=$(CONFIG_USE_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_FRIENDLY_NAME=$(CONFIG_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_IE_SERIAL_CHOICE=$(CONFIG_SAH_WPS_IE_SERIAL_CHOICE) CONFIG_SAH_WLD_INIT_LEGACY=$(CONFIG_SAH_WLD_INIT_LEGACY) CONFIG_SAH_WLD_INIT_SCRIPT=$(CONFIG_SAH_WLD_INIT_SCRIPT) CONFIG_SAH_WLD_INIT_ORDER=$(CONFIG_SAH_WLD_INIT_ORDER))
endef

define Package/$(PKG_NAME)/install
	$(CP) $(PKG_INSTALL_DIR)/* $(1)/
endef

define Package/$(PKG_NAME)/config
	source "$(SOURCE)/Config.in"
endef

$(eval $(call BuildPackage,$(PKG_NAME)))
