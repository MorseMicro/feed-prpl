include $(TOPDIR)/rules.mk

PKG_NAME:=pwhm
PKG_VERSION:=v4.20.1
SHORT_DESCRIPTION:=PrplMesh WHM
PKG_SOURCE:=pwhm-v4.20.1.tar.gz
PKG_SOURCE_URL:=https://gitlab.com/prpl-foundation/prplmesh/pwhm/plugins/pwhm/-/archive/v4.20.1
PKG_HASH:=30957a58b4c048d69576a0726c67f32eca1bedbdcd0090ce13f297ea823d5441
PKG_BUILD_DIR:=$(BUILD_DIR)/pwhm-v4.20.1
PKG_MAINTAINER:=Soft At Home <support.opensource@softathome.com>
PKG_LICENSE:=BSD-2-Clause-Patent
PKG_LICENSE_FILES:=LICENSE

COMPONENT:=pwhm

PKG_RELEASE:=1
PKG_BUILD_DEPENDS += openssl/host

define SAHInit/Install
	install -d ${PKG_INSTALL_DIR}/etc/rc.d/
	ln -sfr ${PKG_INSTALL_DIR}/etc/init.d/$(CONFIG_SAH_WLD_INIT_SCRIPT) ${PKG_INSTALL_DIR}/etc/rc.d/S$(CONFIG_SAH_WLD_INIT_ORDER)$(CONFIG_SAH_WLD_INIT_SCRIPT)
endef

include $(INCLUDE_DIR)/package.mk

define Package/$(PKG_NAME)
  SECTION:=net
  CATEGORY:=prpl Foundation
  SUBMENU:=prplMesh
  TITLE:=$(SHORT_DESCRIPTION)
  URL:=https://gitlab.com/prpl-foundation/prplmesh/pwhm/plugins/pwhm
  DEPENDS += +libsahtrace
  DEPENDS += +libswlc
  DEPENDS += +libswla
  DEPENDS += +libopenssl
  DEPENDS += +libnl-core
  DEPENDS += +libnl-genl
  DEPENDS += +libamxm
  DEPENDS += +libamxc
  DEPENDS += +libamxp
  DEPENDS += +libamxd
  DEPENDS += +libamxb
  DEPENDS += +libamxo
  DEPENDS += +amxrt
  DEPENDS += +mod-netmodel
  DEPENDS += +TARGET_ipq807x_generic_DEVICE_prpl_haze:mod-whm-haze
  DEPENDS += +TARGET_ipq95xx_generic_DEVICE_prpl_freedom:mod-whm-freedom
  MENU:=1
endef

define Package/$(PKG_NAME)/description
	prplMesh WHM
endef

define Build/Compile
	$(call Build/Compile/Default, STAGINGDIR=$(STAGING_DIR) CONFIGDIR=$(STAGING_DIR) PKG_CONFIG_PATH=$(STAGING_DIR)/usr/lib/pkgconfig LIBDIR=/usr/lib INSTALL_LIB_DIR=/lib INSTALL_BIN_DIR=/bin RAW_VERSION=$(PKG_VERSION) HARDCO_HAL_DIR=$(STAGING_DIR)/usr/include CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID=$(CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID) CONFIG_USE_SAH_WPS_DEVICE_NAME=$(CONFIG_USE_SAH_WPS_DEVICE_NAME) CONFIG_SAH_WPS_DEVICE_NAME=$(CONFIG_SAH_WPS_DEVICE_NAME) CONFIG_USE_SAH_WPS_FRIENDLY_NAME=$(CONFIG_USE_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_FRIENDLY_NAME=$(CONFIG_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WLD_INIT_LEGACY=$(CONFIG_SAH_WLD_INIT_LEGACY) CONFIG_SAH_WLD_INIT_SCRIPT=$(CONFIG_SAH_WLD_INIT_SCRIPT) CONFIG_SAH_WLD_INIT_ORDER=$(CONFIG_SAH_WLD_INIT_ORDER))
endef

define Build/Install
	$(call Build/Install/Default, install INSTALL=install D=$(PKG_INSTALL_DIR) DEST=$(PKG_INSTALL_DIR) CONFIGDIR=$(STAGING_DIR) PV=$(PKG_VERSION) PKG_CONFIG_LIBDIR=$(STAGING_DIR)/usr/lib/pkgconfig LIBDIR=/usr/lib INSTALL_LIB_DIR=/lib INSTALL_BIN_DIR=/bin RAW_VERSION=$(PKG_VERSION) HARDCO_HAL_DIR=$(STAGING_DIR)/usr/include CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID=$(CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID) CONFIG_USE_SAH_WPS_DEVICE_NAME=$(CONFIG_USE_SAH_WPS_DEVICE_NAME) CONFIG_SAH_WPS_DEVICE_NAME=$(CONFIG_SAH_WPS_DEVICE_NAME) CONFIG_USE_SAH_WPS_FRIENDLY_NAME=$(CONFIG_USE_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_FRIENDLY_NAME=$(CONFIG_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WLD_INIT_LEGACY=$(CONFIG_SAH_WLD_INIT_LEGACY) CONFIG_SAH_WLD_INIT_SCRIPT=$(CONFIG_SAH_WLD_INIT_SCRIPT) CONFIG_SAH_WLD_INIT_ORDER=$(CONFIG_SAH_WLD_INIT_ORDER))
	find $(PKG_INSTALL_DIR) -name *.a -exec rm {} +;
	find $(PKG_INSTALL_DIR) -name *.h -exec rm {} +;
	find $(PKG_INSTALL_DIR) -name *.pc -exec rm {} +;

	$(call SAHInit/Install)
endef

define Build/InstallDev
	$(call Build/Install/Default, install INSTALL=install D=$(STAGING_DIR) DEST=$(STAGING_DIR) CONFIGDIR=$(STAGING_DIR) PV=$(PKG_VERSION) PKG_CONFIG_LIBDIR=$(STAGING_DIR)/usr/lib/pkgconfig LIBDIR=/usr/lib INSTALL_LIB_DIR=/lib INSTALL_BIN_DIR=/bin RAW_VERSION=$(PKG_VERSION) HARDCO_HAL_DIR=$(STAGING_DIR)/usr/include CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID=$(CONFIG_USE_SAH_WPS_FORCE_EQUAL_WL_UUID) CONFIG_USE_SAH_WPS_DEVICE_NAME=$(CONFIG_USE_SAH_WPS_DEVICE_NAME) CONFIG_SAH_WPS_DEVICE_NAME=$(CONFIG_SAH_WPS_DEVICE_NAME) CONFIG_USE_SAH_WPS_FRIENDLY_NAME=$(CONFIG_USE_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WPS_FRIENDLY_NAME=$(CONFIG_SAH_WPS_FRIENDLY_NAME) CONFIG_SAH_WLD_INIT_LEGACY=$(CONFIG_SAH_WLD_INIT_LEGACY) CONFIG_SAH_WLD_INIT_SCRIPT=$(CONFIG_SAH_WLD_INIT_SCRIPT) CONFIG_SAH_WLD_INIT_ORDER=$(CONFIG_SAH_WLD_INIT_ORDER))
endef

define Package/$(PKG_NAME)/install
	$(CP) $(PKG_INSTALL_DIR)/* $(1)/
	if [ -d ./files ]; then \
		$(CP) ./files/* $(1)/; \
	fi
endef

define Package/$(PKG_NAME)/config
	source "$(SOURCE)/Config.in"
endef

$(eval $(call BuildPackage,$(PKG_NAME)))
