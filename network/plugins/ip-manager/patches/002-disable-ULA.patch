Subject: [PATCH] disable ULA

---
 odl/ip-manager_defaults/00_ip_defaults.odl     | 2 +-
 odl/ip-manager_defaults/30_ip_lan-defaults.odl | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/odl/ip-manager_defaults/00_ip_defaults.odl b/odl/ip-manager_defaults/00_ip_defaults.odl
index 743262c..a4ce87a 100644
--- a/odl/ip-manager_defaults/00_ip_defaults.odl
+++ b/odl/ip-manager_defaults/00_ip_defaults.odl
@@ -2,6 +2,6 @@
     object IP {
         parameter IPv4Enable = true;
         parameter IPv6Enable = true;
-        parameter ULAPrefix = "fc::/48";
+        parameter ULAPrefix = "fc00::/48";
     }
 }
diff --git a/odl/ip-manager_defaults/30_ip_lan-defaults.odl b/odl/ip-manager_defaults/30_ip_lan-defaults.odl
index 88cfe95..7715b3b 100644
--- a/odl/ip-manager_defaults/30_ip_lan-defaults.odl
+++ b/odl/ip-manager_defaults/30_ip_lan-defaults.odl
@@ -4,7 +4,7 @@
             parameter Enable = true;
             parameter IPv4Enable = true;
             parameter IPv6Enable = true;
-            parameter ULAEnable = true;
+            parameter ULAEnable = false;
             parameter UCISectionNameIPv4 = "lan";
             parameter UCISectionNameIPv6 = "lan";
             parameter MaxMTUSize = 1500;
@@ -32,7 +32,7 @@
 
     object IP.Interface.lan.IPv6Prefix {
         instance add ("ULA64") {
-            parameter Enable = true;
+            parameter Enable = false;
             parameter Origin = "AutoConfigured";
             parameter Prefix = "";
             parameter Autonomous = true;
